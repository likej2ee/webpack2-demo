{
    "_comment": "See http://eslint.cn/docs/rules/ for more details",
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "amd": true
    },
    "globals": {
        "__DEV__": true,
        "__TEST__": true,
        "__PRODUCTION__": true,
        "__dirname": true,

        "jquery": true,
        "$": true,
        "avalon": true,
        "Vue": true,

        "AGL": true,
        "wx": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "no-cond-assign": [2, "always"],
        "no-console": 0,

        "semi": [0, "always"],
        "camelcase": 0,
        "comma-dangle": [0, "never"],
        "curly": 0,
        "brace-style": [0, "1tbs"],
        "indent": [0, 4, {
            "SwitchCase": 1,
            "MemberExpression": 1
        }],
        "keyword-spacing": [2, {
            "before": true,
            "after": true
        }],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "no-unexpected-multiline": [2],
        "space-infix-ops": [2, {
            "int32Hint": false
        }],
        "object-curly-newline": [2, {
            "ObjectExpression": {
                "minProperties": 1
            },
            "ObjectPattern": {
                "multiline": true
            }
        }],
        "object-property-newline": 2
    }
}
