{
    // JSHint Default Configuration File (as on JSHint website)
    // See http://jshint.com/docs/ for more details

    "maxerr"        : 50,       // {int} Maximum error before stopping

    // Enforcing
    "camelcase"     : true,     // 部分关于检测代码风格的配置在下个发布版本将被移除，官方建议使用jscs项目
    "indent"        : 4,        // {int} Number of spaces to use for indentation,
    "white"         : true,
    "undef"         : true,
    "unused"        : true,
    "-W058"         : true,
    "-W014"         : true,
    "expr"          : true,

    // Relaxing
    "esversion"     : 6,

    // Environments
    "browser"       : true,     // Web Browser (window, document, etc)

    // Custom Globals
    "globals"       : {
        "__DEV_ECLIPSE__"       : true,
        "__DEV__"               : true,
        "__PRODUCTION__"        : true,
        "__dirname"             : true,

        "module"                : true,
        "require"               : true,
        "define"                : true,
        "console"               : true,

        "jquery"                : true,
        "$"                     : true,
        "avalon"                : true,
        "Vue"                   : true,

        "AGL"                   : true
    }
}
